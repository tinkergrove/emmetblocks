<?xml version="1.0"?>
<ruleset name="WordPress Plugin">
    <description>WordPress Coding Standards for EmmetBlocks Plugin</description>

    <!-- PHP version for compatibility checks -->
    <config name="testVersion" value="7.4-"/>

    <!-- Include the WordPress rules -->
    <rule ref="WordPress"/>

    <!-- Exclude directories that shouldn't be linted -->
    <exclude-pattern>.kilocode/</exclude-pattern>
    <exclude-pattern>build/</exclude-pattern>
    <exclude-pattern>node_modules/</exclude-pattern>
    <exclude-pattern>src/</exclude-pattern>
    <exclude-pattern>vendor/</exclude-pattern>

    <!-- Files to scan (PHP files in the root and subdirs, excluding the above) -->
    <file>.</file>
</ruleset>